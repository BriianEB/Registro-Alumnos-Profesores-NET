@model RegistroAlumnosYProfesores.Models.ProfesorModel

@{
    ViewData["Title"] = "Registrar profesor";
}

<div class="form-container">
    <h2>Agregar nuevo profesor</h2>
    <form id="profesor_form" asp-controller="Profesores" asp-action="Registrar" method="post">
        <div class="form-group">
            <label asp-for="NoEmpleado"></label>
            <input class="form-control" asp-for="NoEmpleado">
            <span asp-validation-for="NoEmpleado"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input class="form-control" asp-for="Nombre">
            <span asp-validation-for="Nombre"></span>
        </div>
        <div class="form-group">
            <label asp-for="Carrera"></label>
            <input class="form-control" asp-for="Carrera">
            <span asp-validation-for="Carrera"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telefono"></label>
            <input class="form-control" asp-for="Telefono">
            <span asp-validation-for="Telefono"></span>
        </div>
        <div class="button-container">
            <button type="submit" class="boton" name="guardar">Guardar</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/registrar_profesor_form.js"></script>
    @*<partial name="_ValidationScriptsPartial">*@
}
