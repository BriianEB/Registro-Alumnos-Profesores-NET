@model RegistroAlumnosYProfesores.Models.AlumnoModel

@{
    ViewData["Title"] = "Registrar alumno";
}

<div class="form-container">
    <h2>Agregar nuevo alumno</h2>
    <form id="alumno_form" asp-controller="Alumnos" asp-action="Registrar" method="post">
        <div class="form-group">
            <label asp-for="Matricula"></label>
            <input class="form-control" asp-for="Matricula">
            <span asp-validation-for="Matricula"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input class="form-control" asp-for="Nombre">
            <span asp-validation-for="Nombre"></span>
        </div>
        <div class="form-group">
            <label asp-for="Carrera"></label>
            <input class="form-control" asp-for="Carrera">
            <span asp-validation-for="Carrera"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email">
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telefono"></label>
            <input class="form-control" asp-for="Telefono">
            <span asp-validation-for="Telefono"></span>
        </div>
        <div class="button-container">
            <button type="submit" class="boton" name="guardar">Guardar</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/js/registrar_alumno_form.js"></script>
    @*<partial name="_ValidationScriptsPartial">*@
}
